{
  "hooks": [
    {
      "matcher": "Edit|Write",
      "type": "command",
      "command": "prettier --write \"$CLAUDE_FILE_PATHS\" 2>/dev/null || echo 'Prettier not available for this file type'"
    },
    {
      "matcher": "Edit",
      "type": "command",
      "command": "if [[ \"$CLAUDE_FILE_PATHS\" =~ \\.(ts|tsx)$ ]]; then npx tsc --noEmit --skipLibCheck \"$CLAUDE_FILE_PATHS\" 2>/dev/null || echo '‚ö†Ô∏è TypeScript errors detected - please review'; fi"
    },
    {
      "matcher": "Edit|Write",
      "type": "command",
      "command": "if [[ \"$CLAUDE_FILE_PATHS\" =~ \\.(js|jsx|ts|tsx)$ ]]; then npx eslint \"$CLAUDE_FILE_PATHS\" --fix 2>/dev/null || echo '‚ö†Ô∏è ESLint issues detected'; fi"
    },
    {
      "matcher": "Edit|Write",
      "type": "command",
      "command": "if [[ \"$CLAUDE_FILE_PATHS\" =~ \\.py$ ]]; then black \"$CLAUDE_FILE_PATHS\" 2>/dev/null || echo '‚ö†Ô∏è Black formatter not available'; fi"
    },
    {
      "matcher": "Edit|Write",
      "type": "command",
      "command": "if [[ \"$CLAUDE_FILE_PATHS\" =~ \\.py$ ]]; then flake8 \"$CLAUDE_FILE_PATHS\" 2>/dev/null || echo '‚ö†Ô∏è Flake8 linter issues detected'; fi"
    },
    {
      "matcher": "Write|Edit",
      "type": "command",
      "command": "if [[ \"$CLAUDE_FILE_PATHS\" =~ \\.(json|yml|yaml)$ ]]; then echo '‚úÖ Configuration file updated: $CLAUDE_FILE_PATHS'; fi"
    },
    {
      "matcher": "Edit|Write",
      "type": "command",
      "command": "if [[ \"$CLAUDE_FILE_PATHS\" =~ \\.md$ ]]; then echo 'üìù Documentation updated: $CLAUDE_FILE_PATHS'; fi"
    },
    {
      "matcher": "GitCommit",
      "type": "command",
      "command": "echo 'üéâ Changes committed successfully!'"
    },
    {
      "matcher": "Bash",
      "type": "command",
      "command": "if [[ \"$CLAUDE_TOOL_COMMAND\" =~ ^npm\\ (install|add|remove) ]]; then echo 'üì¶ Package changes detected - remember to commit package.json'; fi"
    },
    {
      "matcher": "Bash",
      "type": "command",
      "command": "if [[ \"$CLAUDE_TOOL_COMMAND\" =~ ^pip\\ install ]]; then echo 'üêç Python package installed - consider adding to requirements.txt'; fi"
    }
  ],
  "preferences": {
    "codeStyle": {
      "indentation": "2 spaces",
      "semicolons": true,
      "quotes": "single",
      "trailingCommas": true
    },
    "testing": {
      "framework": "jest",
      "coverage": true,
      "watchMode": false
    },
    "git": {
      "commitStyle": "conventional",
      "branchNaming": "feature/description",
      "autoStage": false
    },
    "deployment": {
      "platform": "fly.io",
      "autoScale": true,
      "healthChecks": true
    }
  }
}